{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks"
  },
  "deploy": {
    "startCommand": "node house-deploy-commands.js && node house-bot.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production"
      },
      "volumes": [
        {
          "name": "bot-data",
          "mountPath": "/app/data"
        }
      ]
    }
  }
} 